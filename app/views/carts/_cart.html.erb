<div class="cart_title">Your Cart</div>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
  <tr class="total_line">  	
    <td colspan="2">Item<% if cart.total_quantity > 1 %>s<% end %></td>
    <td class="total_cell"><%= cart.total_quantity %></td>
  </tr>
</table>

