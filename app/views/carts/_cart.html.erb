<!--  <%= @remote_empty_cart = current_page?(new_order_path) == false %> -->

  <%= button_to 'Checkout', new_order_path, method: :get, disabled: @checkout_disabled %>
  <%= button_to 'Empty cart', cart, method: :delete, confirm: 'Are you sure?', remote: @remote_empty_cart %>
